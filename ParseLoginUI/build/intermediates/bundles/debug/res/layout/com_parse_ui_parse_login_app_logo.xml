<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_logo"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:contentDescription="@string/com_parse_ui_logo_content_description"
        android:src="@drawable/ic_gobus_launcher"/>

    <TextView
        android:id="@+id/login_moto_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_moto"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/theme_primary"
        android:visibility="invisible"/>

</LinearLayout><!-- From: file:/Users/khinsandar/Documents/VipPro/UNDP/Application/iwomen/ParseLoginUI/res/layout/com_parse_ui_parse_login_app_logo.xml -->