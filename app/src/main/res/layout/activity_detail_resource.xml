<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="false"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin">


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#FFF">

        <LinearLayout
            android:id="@+id/main_ui_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <org.undp_iwomen.iwomen.ui.widget.ResizableImageView
                    android:id="@+id/img_detail"
                    android:layout_width="fill_parent"

                    android:layout_height="250dp"

                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/place_holder" />

                <ProgressBar
                    android:id="@+id/progressBar_img"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center"
                    android:visibility="visible" />
            </FrameLayout>


            <TextView
                android:id="@+id/txt_share_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Share Data"


                android:textColor="#333"
                android:textSize="18sp" />

            <com.andexert.library.RippleView
                android:id="@+id/more"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="?android:actionBarSize"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/more2">


                <Button
                    android:id="@+id/postStatusUpdateButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:drawableLeft="@android:drawable/ic_menu_share"
                    android:padding="16dp"

                    android:text="Share in Facebook"
                    android:textAllCaps="true"

                    android:textColor="@color/white" />
            </com.andexert.library.RippleView>

            <TextView
                android:id="@+id/txt_cp_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="\u00A9 2015 I women . All rights reserved."
                android:textSize="16sp" />

        </LinearLayout>


    </FrameLayout>

</ScrollView>